{
  "name": "algopilot-agent",
  "publisher": "Algo-Pilot",
  "displayName": "AlgoPilot Agent",
  "description": "AI-powered VS Code Agent for Code Review and Teaching",
  "version": "0.0.4",
  "icon": "icon/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "algopilot.analyzeCode",
        "title": "AlgoPilot: Analyze Code"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "algopilot-sidebar",
          "title": "AlgoPilot Tutor",
          "icon": "$(book)"
        },
        {
          "id": "algopilot-recommendation-sidebar",
          "title": "LeetCode Recommendations",
          "icon": "$(pencil)"
        }
      ]
    },
    "views": {
      "algopilot-sidebar": [
        {
          "type": "webview",
          "id": "algopilot.tutorView",
          "name": "Vibe Coding Tutor"
        }
      ],
      "algopilot-recommendation-sidebar": [
        {
          "type": "webview",
          "id": "algopilot.recommendationView",
          "name": "LeetCode Recommendations"
        }
      ]
    },
    "configuration": {
      "title": "AlgoPilot",
      "properties": {
        "algopilot.llm.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for AlgoPilot LLM Service"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cross-fetch": "^4.1.0"
  }
}
